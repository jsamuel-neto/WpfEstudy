<Window x:Class="WpfEstudy.App.Telas.PessoaInsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pessoas" Height="326.178" Width="300" WindowStyle="ToolWindow">
    <Grid Margin="3">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Id"/>
            <TextBox Text="{Binding id}" IsEnabled="False"/>
            <TextBlock Text="Nome"/>
            <TextBox Text="{Binding nome}"/>
            <TextBlock Text="Documento"/>
            <TextBox Text="{Binding documento}"/>
            <TextBlock Text="Data Nascimento"/>
            <DatePicker SelectedDate=""/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Button Name="OKButtom" Grid.Column="0" Content="Ok" Margin="3"
                        IsDefault="True" Click="OKButtom_Click"/>
                <Button Grid.Column="1" Content="Cancelar" Margin="3" IsCancel="True"/>
            </Grid>
        </StackPanel>        
    </Grid>
</Window>
